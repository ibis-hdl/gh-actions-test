{
    "version": 8,
    "include": [
        "cmake/presets/GnuC.json",
        "cmake/presets/Clang.json",
        "cmake/presets/msvc.json",
        "cmake/presets/OS.json"
    ],
    "configurePresets": [
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GnuC: Release",
            "description": "Linux/WSL2 GnuC compiler: Release",
            "inherits": [
                "condition-linux",
                "ninja-config",
                "gcc-build-type-release",
                "conan-release",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GnuC: Debug",
            "description": "Linux/WSL2 GnuC compiler: Debug",
            "inherits": [
                "condition-linux",
                "ninja-config",
                "gcc-build-type-debug",
                "conan-debug",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "linux-gcc-release-with-debug",
            "displayName": "Linux GnuC: RelWithDebInfo",
            "description": "Linux/WSL2 GnuC compiler: RelWithDebInfo",
            "inherits": [
                "condition-linux",
                "ninja-config",
                "gcc-build-type-release-with-debug",
                "conan-release",
                "default-install-settings",
                "default-environment"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-gcc-release",
            "displayName": "Release",
            "configurePreset": "linux-gcc-release",
            "configuration": "Release",
            "inherits": [
                "conan-release"
            ]
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Debug",
            "configurePreset": "linux-gcc-debug",
            "configuration": "Debug",
            "inherits": [
                "conan-debug"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "linux-gcc-release",
            "displayName": "Test-All",
            "configurePreset": "linux-gcc-release",
            "inherits": []
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Test-All",
            "configurePreset": "linux-gcc-debug",
            "inherits": []
        }
    ]
}
