{
    "version": 6,
    "include": [
        "cmake/presets/GnuC.json",
        "cmake/presets/Clang.json",
        "cmake/presets/msvc.json",
        "cmake/presets/OS.json",
        "CMakeConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "gcc-release",
            "displayName": "Linux GnuC: Release",
            "description": "Linux/WSL2 GnuC compiler: Release",
            "inherits": [
                "condition-linux",
                "ninja-config",
                "gcc-build-type-release",
                "conan-release",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "gcc-debug",
            "displayName": "Linux GnuC: Debug",
            "description": "Linux/WSL2 GnuC compiler: Debug",
            "inherits": [
                "condition-linux",
                "ninja-config",
                "gcc-build-type-debug",
                "conan-debug",
                "default-install-settings",
                "default-environment"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-release",
            "displayName": "Release",
            "configurePreset": "gcc-release",
            "configuration": "Release",
            "inherits": [
                "conan-release"
            ]
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug",
            "configurePreset": "gcc-debug",
            "configuration": "Debug",
            "inherits": [
                "conan-debug"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "gcc-release",
            "displayName": "Test-All",
            "configurePreset": "gcc-release",
            "inherits": [
                "conan-release"
            ]
        },
        {
            "name": "gcc-debug",
            "displayName": "Test-All",
            "configurePreset": "gcc-debug",
            "inherits": [
                "conan-debug"
            ]
        }
    ]
}
