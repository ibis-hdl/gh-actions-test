{
    "version": 8,
    "include": [
        "cmake/presets/gnuc.json",
        "cmake/presets/clang.json",
        "cmake/presets/clang-libcpp.json",
        "cmake/presets/msvc.json",
        "cmake/presets/msvc-cl.json"
    ],
    "configurePresets": [
        {
            "name": "conan-provider",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/cmake-conan/conan_provider.cmake"
            }
        },
        {
            "name": "gcc",
            "displayName": "GnuC",
            "description": "GnuC compiler",
            "inherits": [
                "condition-linux",
                "ninja-multi-config",
                "conan-provider",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "description": "Clang compiler",
            "inherits": [
                "condition-anyOf-linux-or-darwin",
                "ninja-multi-config",
                "clang-release-build-type",
                "conan-provider",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "clang-libc++",
            "displayName": "Clang-libc++",
            "description": "Clang-libc++ compiler",
            "inherits": [
                "condition-linux",
                "ninja-multi-config",
                "clang-libc++-release-build-type",
                "conan-provider",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ],
            "cacheVariables": {
                "CONAN_HOST_PROFILE": "clang-libc++",
                "CONAN_BUILD_PROFILE": "clang-libc++"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "description": "Microsoft Visual Studio C++ compiler",
            "inherits": [
                "condition-windows",
                "windows-x64-arch",
                "ninja-multi-config",
                "msvc-release-build-type",
                "conan-provider",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        },
        {
            "name": "msvc-cl",
            "displayName": "MSVC-Cl",
            "description": "Microsoft Visual Studio bundled Clang C++ compiler",
            "inherits": [
                "condition-windows",
                "windows-x64-arch",
                "ninja-multi-config",
                "msvc-clang-release-build-type",
                "conan-provider",
                "cmake-default-configure-settings",
                "default-install-settings",
                "default-environment"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-release",
            "displayName": "Release",
            "description": "Release build with GnuC",
            "configuration": "Release",
            "configurePreset": "gcc",
            "inherits": []
        },
        {
            "name": "gcc-debug",
            "displayName": "Debug",
            "description": "Debug build with GnuC",
            "configuration": "Debug",
            "configurePreset": "gcc",
            "inherits": []
        },
        {
            "name": "clang-release",
            "displayName": "Release",
            "description": "Release build with Clang",
            "configuration": "Release",
            "configurePreset": "clang",
            "inherits": []
        },
        {
            "name": "clang-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang",
            "configuration": "Debug",
            "configurePreset": "clang",
            "inherits": []
        },
        {
            "name": "clang-libc++-release",
            "displayName": "Release",
            "description": "Release build with Clang libc++",
            "configuration": "Release",
            "configurePreset": "clang-libc++",
            "inherits": []
        },
        {
            "name": "clang-libc++-debug",
            "displayName": "Debug",
            "description": "Debug build with Clang libc++",
            "configuration": "Debug",
            "configurePreset": "clang-libc++",
            "inherits": []
        },
        {
            "name": "msvc-release",
            "displayName": "Release",
            "description": "Release build with Microsoft Visual Studio",
            "configuration": "Release",
            "configurePreset": "msvc",
            "inherits": []
        },
        {
            "name": "msvc-debug",
            "displayName": "Debug",
            "description": "Debug build with Microsoft Visual Studio",
            "configuration": "Debug",
            "configurePreset": "msvc",
            "inherits": []
        },
        {
            "name": "msvc-cl-release",
            "displayName": "Release",
            "description": "Release build with Microsoft Visual Studio bundled Clang C++ compiler",
            "configuration": "Release",
            "configurePreset": "msvc-cl",
            "inherits": []
        },
        {
            "name": "msvc-cl-debug",
            "displayName": "Debug",
            "description": "Debug build with Microsoft Visual Studio bundled Clang C++ compiler",
            "configuration": "Debug",
            "configurePreset": "msvc-cl",
            "inherits": []
        }
    ],
    "testPresets": [
        {
            "name": "test-gcc-release",
            "displayName": "Release Test",
            "description": "Test GnuC build",
            "configuration": "Release",
            "configurePreset": "gcc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-gcc-debug",
            "displayName": "Debug Test",
            "description": "Test GnuC build",
            "configuration": "Debug",
            "configurePreset": "gcc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-clang-release",
            "displayName": "Release Test",
            "description": "Test Clang build",
            "configuration": "Release",
            "configurePreset": "clang",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-clang-debug",
            "displayName": "Debug Test",
            "description": "Test Clang build",
            "configuration": "Release",
            "configurePreset": "clang",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-clang-libc++-release",
            "displayName": "Release Test",
            "description": "Test Clang libc++ build",
            "configuration": "Release",
            "configurePreset": "clang-libc++",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-clang-libc++-debug",
            "displayName": "Debug Test",
            "description": "Test Clang libc++ build",
            "configuration": "Release",
            "configurePreset": "clang-libc++",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-msvc-release",
            "displayName": "Release Test",
            "description": "Test Microsoft Visual Studio build",
            "configuration": "Release",
            "configurePreset": "msvc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-msvc-debug",
            "displayName": "Debug Test",
            "description": "Test Microsoft Visual Studio build",
            "configuration": "Release",
            "configurePreset": "msvc",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-msvc-cl-release",
            "displayName": "Release Test",
            "description": "Test Microsoft Visual Studio bundled Clang build",
            "configuration": "Release",
            "configurePreset": "msvc-cl",
            "inherits": [
                "default-testPreset"
            ]
        },
        {
            "name": "test-msvc-cl-debug",
            "displayName": "Debug Test",
            "description": "Test Microsoft Visual Studio bundled Clang build",
            "configuration": "Release",
            "configurePreset": "msvc-cl",
            "inherits": [
                "default-testPreset"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "GnuC Debug",
            "displayName": "CI GnuC Debug",
            "description": "Continuous Integration/Continuous Delivery using GnUC (Debug)",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc"
                },
                {
                    "type": "build",
                    "name": "gcc-debug"
                },
                {
                    "type": "test",
                    "name": "test-gcc-debug"
                }
            ]
        },
        {
            "name": "GnuC Release",
            "displayName": "CI/CD GnuC",
            "description": "Continuous Integration/Continuous Delivery using GnUC Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "gcc"
                },
                {
                    "type": "build",
                    "name": "gcc-release"
                },
                {
                    "type": "test",
                    "name": "test-gcc-release"
                }
            ]
        },
        {
            "name": "Clang Release",
            "displayName": "CI/CD Clang",
            "description": "Continuous Integration/Continuous Delivery using Clang Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "clang"
                },
                {
                    "type": "build",
                    "name": "clang-release"
                },
                {
                    "type": "test",
                    "name": "test-clang-release"
                }
            ]
        },
        {
            "name": "Clang libc++ Release",
            "displayName": "CI/CD Clang libc++",
            "description": "Continuous Integration/Continuous Delivery using GnUC with libc++ Release",
           "steps": [
                {
                    "type": "configure",
                    "name": "clang-libc++"
                },
                {
                    "type": "build",
                    "name": "clang-libc++-release"
                },
                {
                    "type": "test",
                    "name": "test-clang-libc++-release"
                }
            ]
        },
        {
            "name": "MSVC Release",
            "displayName": "CI/CD MSVC",
            "description": "Continuous Integration/Continuous Delivery using MSVC Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "msvc"
                },
                {
                    "type": "build",
                    "name": "msvc-release"
                },
                {
                    "type": "test",
                    "name": "test-msvc-release"
                }
            ]
        },
        {
            "name": "MSVC-Cl Release",
            "displayName": "CI/CD MSVC-Clang",
            "description": "Continuous Integration/Continuous Delivery using Clang's compatibility mode with MSVC Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "msvc-cl"
                },
                {
                    "type": "build",
                    "name": "msvc-cl-release"
                },
                {
                    "type": "test",
                    "name": "test-msvc-cl-release"
                }
            ]
        }
    ]
}
