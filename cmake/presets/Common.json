{
    "version": 8,
    "configurePresets": [
        {
            "name": "default-ninja-settings",
            "description": "Common settings related to build tool Ninja.",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo"
            }
        },
        {
            "name": "ninja-multi-config",
            "description": "Multiple configurations for Visual Studio and XCode.",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "inherits": [
                "default-ninja-settings"
            ]
        },
        {
            "name": "ninja-config",
            "description": "Traditional single-config Ninja generator.",
            "hidden": true,
            "generator": "Ninja",
            "inherits": [
                "default-ninja-settings"
            ]
        },
        {
            "name": "settings-stdlib-libc++",
            "description": "Settings to compile and link with libc++",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-stdlib=libc++",
                "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++",
                "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++"
            }
        },
        {
            "name": "build-type-release",
            "description": "CMake Release build target",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "build-type-debug",
            "description": "CMake Debug build target",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "build-type-release-with-debug",
            "description": "CMake Release with Debug symbols build target",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "clang-tidy",
            "description": "CMake Clang-Tidy build target",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
            }
        },
        {
            "name": "default-install-settings",
            "description": "Default build and install directories",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
            }
        },
        {
            "name": "default-environment",
            "description": "Default environment variables for the CMake process",
            "hidden": true,
            "environment": {}
        },
        {
            "name": "default-compiler-cache-settings",
            "hidden": true,
            "environment": {
                "CCACHE_BASEDIR": "${sourceDir}",
                "CCACHE_SLOPPINESS": "pch_defines,time_macros"
            }
        },
        {
            "name": "ccache",
            "description": "Ccache compiler cache.",
            "hidden": true,
            "inherits": [
                "default-compiler-cache-settings"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
            }
        },
        {
            "name": "sccache",
            "description": "Mozilla's sccache ccache-like tool.",
            "hidden": true,
            "inherits": [
                "default-compiler-cache-settings"
            ],
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "sccache"
            }
        }
    ],
    "buildPresets": [],
    "testPresets": []
}
